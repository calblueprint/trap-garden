{
  "arrowParens": "avoid",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "printWidth": 80,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",

  "importOrder": [
    "<TYPES>^(node:)",
    "<TYPES>",
    "<TYPES>^[.]",
    "^react/?[^-]*$",
    "^next/?[^-]*$",
    "<BUILTIN_MODULES>",
    "<THIRD_PARTY_MODULES>",
    "^@/.*$",
    "^[.]",
    "[.]css$"
  ],
  "plugins": ["@ianvs/prettier-plugin-sort-imports"]
}
